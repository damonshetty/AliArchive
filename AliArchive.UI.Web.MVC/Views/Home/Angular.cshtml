@{
    ViewBag.Title = "Angular";
    Layout = "~/Views/Shared/_LayoutAngularjs.cshtml";
}

<h2>Ali Archive Angularjs Version</h2>

<table class="table table-striped table-bordered table-hover table-responsive table-condensed" style="border-collapse: separate; border-top-left-radius: 10px;border-top-right-radius: 10px;" ng-cloak>
    <thead>
        <tr style="background-color:#e5e5e5;">
            <th style="border-collapse: separate; border-top-left-radius: 10px;"><strong>Date</strong> <small>(dd/mm/yy)</small></th>
            <td><strong>Match</strong></td>
            <td><strong>Result</strong></td>
            <td><strong>Venue</strong></td>
            <td style="border-collapse: separate; border-top-right-radius: 10px;"><strong>Location</strong></td>
        </tr>
    </thead>

    <tbody ng-repeat ="fight in fights">
        <tr style="margin:0;padding:0">
            <td style="background-color:#a8e1b0"><strong>{{fight.Date.Day}}/{{fight.Date.Month}}/{{fight.Date.Year}}</strong></td>
            <td style="background-color:#cbd9fa"><strong>Ali</strong> <small>({{fight.AlisWeight}} lbs)</small> vs <strong>{{fight.OpponentFirstName + " " + fight.OpponentSecondName}}</strong> <small>({{fight.OpponentsWeight}} lbs)</small></td>
            <td style="background-color:#abbde6"><strong>{{fight.Result}}</strong> <small> {{fight.WonInRound}} of {{fight.Rounds}} rds</small></td>
            <td style="background-color:#fbccaa">{{fight.Venue}}</td>
            <td style="background-color:#febc8d">{{fight.City}} {{fight.Country}}</td>
        </tr>
        <tr>
            <td></td>
            <td colspan="2" style="background-color:#f2f5f1">
                <small> Referee: {{fight.RefereeFirstName}} {{fight.RefereeSecondName}}</small><br />
                <small> Judges: </small>
            </td>
            <td style="background-color:#e7ebe4">
                <small> Attendence: {{fight.Attendence | number}}</small>
                <br />
                <small> Worldwide Audience: {{fight.WorldAudience | number}}</small>
                <br />
                <small> Live Gate: {{fight.LiveGate | currency : $ : 0}}</small>
            </td>
            <td style ="background-color:#e7ebe4">
                <small> Ali Purse: {{fight.AliPurse | currency : $ : 0}}</small>
                <br />
                <small> Opponent Purse: {{fight.OpponentPurse | currency : $ : 0}}</small>
            </td>
        </tr>
    </tbody>
    
</table>