
<p>MVC Amateur Record</p>

<!--Amateur Record-->
<div class="tab-pane fade in" id="Amateur" ng-controller="AmateurFightCtrl">

    <table class="table table-striped table-bordered table-hover table-responsive table-condensed" style="border-collapse: separate;z-index:10;">
        <thead>
            <tr style="background-color:#e5e5e5;">
                <th><strong>Year</strong> <small>(dd/mm/yy)</small></th>
                <td><strong>Match</strong></td>
                <td><strong>Result</strong></td>
                <td><strong>Venue</strong></td>
                <td><strong>Location</strong></td>
            </tr>
        </thead>

        <tbody ng-repeat="fight in fights">
            <tr style="margin:0;padding:0">
                <td style="background-color:#a8e1b0"><strong>{{fight.Year}}</strong></td>
                <td style="background-color:#cbd9fa"><strong>Clay</strong> vs <strong>{{fight.OpponentFirstName + " " + fight.OpponentSecondName}}</strong></td>
                <td style="background-color:#abbde6"><strong>{{fight.Result}}</strong> <small ng-show="fight.Rounds"><strong>{{fight.Rounds}} rds</strong></small></td>
                <td style="background-color:#fbccaa">{{fight.Venue}}</td>
                <td style="background-color:#febc8d">{{fight.City}}, {{fight.State}}, {{fight.Country}}</td>
            </tr>
        </tbody>

    </table>


</div>