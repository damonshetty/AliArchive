<!DOCTYPE html>

<html ng-app="aliApp">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="The Best Muhammad Ali Boxing Fight Record. Boxing results, fights, professional, amateur, exhibitions, commerical, other" />
    @Scripts.Render("~/bundles/angularjs")
    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/controllers/proCtrl.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
</head>
<body ng-controller="proCtrl">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })
                                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#/Test">Test ng</a></li>
                    <li><a href="#/ProRecord">Pro Record ng</a></li>
                    <li><a href="#/Home/AmateurRecord">Amateur Record ng</a></li>
                    <li><a href="#/Home/ExhibitionRecord">Exhibition Record ng</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container">
        <h1>Ali Archive AngularJS Version</h1>
        <h2>
            This website is making a comeback.
        </h2>
        <p>Please check back soon.</p>
        <p>RECORD: 61 Fights / 56 Wins (37 by KO) / 5 Losses</p>

        <!--Routing-->
        <div ng-view></div>
        
        @RenderBody()
        
        <hr />
        <footer><p>&copy; @DateTime.Now.Year</p></footer>
    </div>


    @Scripts.Render("~/bundles/jquery")


    @RenderSection("scripts", required: false)

</body>
</html>
@{
    if (System.Configuration.ConfigurationManager.AppSettings["GoogleAnalytics"] == "true")
    {
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-61288044-1', 'auto');
            ga('send', 'pageview');
        </script>
    }
}