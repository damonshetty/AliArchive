<!DOCTYPE html>

<html ng-app="aliApp">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Muhammad Ali Archive</title>
    <meta name="description" content="The Best Muhammad Ali Boxing Fight Record. Boxing results, fights, professional, amateur, exhibitions, commerical, other" />
    @*@Scripts.Render("~/bundles/bootstrap")*@

    @Scripts.Render("~/bundles/angularjs")
    <script src="~/Scripts/app/app.js"></script>

    <script src="~/Scripts/controllers/proCtrl.js"></script>
    <script src="~/Scripts/controllers/amateurCtrl.js"></script>

    <script src="~/Scripts/factories/jsonProFightsFactory.js"></script>
    <script src="~/Scripts/factories/jsonAmateurFightsFactory.js"></script>

    @Styles.Render("~/Content/css")
    <base href="/">
