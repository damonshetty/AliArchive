            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

                <a href="/Home"class="navbar-brand">Home</a>
                <a href="/About" class="navbar-brand">About</a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/ProRecord">Pro Record</a></li>
                    <li><a href="/AmateurRecord">Amateur Record</a></li>
                    @*<li><a href="#/ExhibitionRecord">Exhibition Record</a></li>*@
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container">
        <h1>Ali Archive AngularJS Version</h1>
        <h2>This website is making a comeback.</h2>
        <p>Please check back soon.</p>
        <p>RECORD: 61 Fights / 56 Wins (37 by KO) / 5 Losses</p>

        <div ng-view></div>

        @RenderBody()

        <hr />
        <footer><p>&copy; @DateTime.Now.Year</p></footer>
    </div>
    
    @*@Scripts.Render("~/bundles/jquery")*@
    @RenderSection("scripts", required: false)

</body>
